{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    // "removeComments": true,
    "stripInternal": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es6", "es2017.object", "dom"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
 }