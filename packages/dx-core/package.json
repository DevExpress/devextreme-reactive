{
  "name": "@devexpress/dx-core",
  "version": "1.0.0-alpha.1",
  "description": "Core library for DevExtreme reactive component suite",
  "author": {
    "name": "Developer Express Inc.",
    "url": "https://www.devexpress.com/"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "main": "dist/dx-core.cjs.js",
  "module": "dist/dx-core.es.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "lint": "eslint src/**/*",
    "lint:fix": "npm run -s lint -- --fix",
    "lint:ci": "npm run -s lint -- -o ../../shippable/testresults/dx-core-lint.xml -f junit"
  },
  "jest": {
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "Core",
    "output": "../../shippable/testresults/dx-core.xml"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "core-js": "^2.4.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "jest": "^19.0.2",
    "jest-junit": "^1.4.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-license": "^0.3.0",
    "rollup-watch": "^3.2.2"
  },
  "dependencies": {
    "babel-runtime": "^6.20.0"
  }
}
