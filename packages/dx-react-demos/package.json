{
  "private": true,
  "name": "@devexpress/dx-react-demos",
  "version": "1.0.0",
  "description": "DevExtreme React Components Demos",
  "author": {
    "name": "Developer Express Inc.",
    "url": "https://www.devexpress.com/"
  },
  "license": "SEE LICENSE IN README.md",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:generator": "node generate-demos.js",
    "build": "yarn run build:generator && webpack --env",
    "build:prod": "yarn run build:generator && webpack --env.production",
    "build:watch:generator": "nodemon --exec \"yarn run build:generator\" --watch \"src/demo-sources/**/*\" --ignore \"**/*.g.jsx\"  --ignore \"**/*.g.test.jsx\" --watch \"src/theme-sources/*/demo-source-data.json\" --watch \"generate-demos.js\" --ext js,jsx,jsxt,json,ts,tsx,tsxt",
    "build:watch": "concurrently \"yarn run build:watch:generator\" \"webpack-dev-server --env\"",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "yarn run lint -- --fix"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/css-stub.js"
    },
    "moduleFileExtensions": ["js", "json", "jsx", "node", "ts", "tsx"],
    "setupFiles": [
      "<rootDir>/setup-enzyme.js"
    ],
    "testMatch": ["**/*.test.(ts|tsx|js|jsx)"]
  },
  "dependencies": {
    "@devexpress/dx-react-core": "1.0.0",
    "@devexpress/dx-react-grid": "1.0.0",
    "@devexpress/dx-react-grid-bootstrap3": "1.0.0",
    "@devexpress/dx-react-grid-material-ui": "1.0.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "core-js": "^2.5.3",
    "material-ui": "1.0.0-beta.31",
    "material-ui-icons": "1.0.0-beta.17",
    "prismjs": "^1.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.2.0",
    "react-frame-component": "^2.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "seamless-immutable": "^7.1.3",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@devexpress/dx-testing": "1.0.0",
    "@types/jest": "^22.1.1",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.1.4",
    "mustache": "^2.3.0",
    "node-static": "^0.7.10",
    "nodemon": "^1.14.11",
    "react-test-renderer": "^16.2.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.1",
    "ts-jest": "^22.0.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "write-file-webpack-plugin": "^4.2.0"
  }
}
