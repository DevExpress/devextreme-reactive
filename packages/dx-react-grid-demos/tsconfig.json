{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.g.test.tsx"
  ]
}
